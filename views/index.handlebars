<div id="home">

  <div class="container">
    <div class="row">
      <div class="col-auto offset-2 mx-auto" id="testing">

        <h2 style="margin-top:20px">Search For a New Buddy!</h2>

        <div class="row offset-1">

          <form class="">
            <div class="form-group">
              <p>
                <strong>Search Area</strong>
                <input class="form-control" id="zipCode" placeholder="Please enter zipcode">
              </p>
            </div>

            <div class="row">

              <div class="col-md-6">
                <p>
                  <strong>Pet Type</strong>
                <div class="form-check">
                  <input class="form-check-input" type="radio" name="petType" id="exampleRadios1" value="Dog">
                  <label class="form-check-label">
                    Dog
                  </label></div>
                <div class="form-check">
                  <input class="form-check-input" type="radio" name="petType" id="exampleRadios1" value="Cat">
                  <label class="form-check-label">
                    Cat
                  </label>
                </div>
                </p>
              </div>

              <div class="col-md-6">
                <p>
                  <strong>Gender</strong>
                <div class="form-check">
                  <input class="form-check-input" type="radio" name="gender" id="male" value="Male">
                  <label class="form-check-label"> Male</label>
                </div>
                <div class="form-check">
                  <input class="form-check-input" type="radio" name="gender" id="female" value="Female">
                  <label class="form-check-label">
                    Female
                  </label>
                </div>
                </p>
              </div>
            </div>

            <div class="row">
              <div class="input-group mb-3">
                <div class="input-group-prepend">
                  <label class="input-group-text" for="size">Age</label>
                </div>
                <select class="custom-select" id="selectAge">
                  <option selected>Choose...</option>
                  <option value="Baby">Baby</option>
                  <option value="Young">Young</option>
                  <option value="Adult">Adult</option>
                  <option value="Senior">Senior</option>
                </select>
              </div>
            </div>

            <div class="row">
              <div class="input-group mb-3">
                <div class="input-group-prepend">
                  <label class="input-group-text" for="size">Size</label>
                </div>
                <select class="custom-select" id="selectSize">
                  <option selected>Choose...</option>
                  <option value="Small">Small</option>
                  <option value="Medium">Medium</option>
                  <option value="Large">Large</option>
                </select>
              </div>
            </div>

            <div class="row" style="margin-bottom:20px">
              <button type="submit" class="btn btn-warning btn-lg mb-2">FIND A FRIEND!</button>
            </div>

          </form>

        </div>
      </div>
    </div>
  </div>
</div>


{{#each animal}}
<div class="row">
    <div class="col-sm-2">
        <center>
            <h6 class="title">Meet {{name}}</h6>
        </center>
    </div>
    <div id="petInfo">
        <div class="col-sm-3">
            <table border="1" width="100%">
                <tr>
                    <td class="colOne" id="Type">Type:</td>
                    <td class="colTwo">{{animal}}</td>
                </tr>
                <td class="colOne" id="Name">Name:</td>
                <td class="colTwo">{{name}}</td>
                <tr>
                    <td class="colOne" id="Breed">Breed:</td>
                    <td class="colTwo">{{breeds}}</td>
                </tr>
                <td class="colOne" id="Age">Age:</td>
                <td class="colTwo">{{age}}</td>
                </tr>
                <tr>
                    <td class="colOne" id="Gender">Gender:</td>
                    <td class="colTwo">{{gender}}</td>
                <tr>
                    <td class="colOne" id="URL">Url:</td>
                    <td class="colTwo">{{url}}</td>
                </tr>
            </table>
        </div>
    </div>
    <div class="col-sm-5">
        <h4 class="title">Description</h4>
        <p class="text">{{description}}</p>
    </div>
</div>
</div>
<br>
{{/each}}
</div>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/index.js"></script>